    <!-- <context:annotation-config />
    <context:component-scan base-package="com.cinderella" /> -->
    
    <bean id="a" class="com.lisz.spring.hw.A" lazy-init="true">
    	<property name="b" ref="b" />
    </bean>
    <bean id="b" class="com.lisz.spring.hw.B" lazy-init="true">
    	<property name="c" ref="c" />
    </bean>
    <bean id="c" class="com.lisz.spring.hw.C" lazy-init="true">
    	<property name="a" ref="a" />
    </bean>
